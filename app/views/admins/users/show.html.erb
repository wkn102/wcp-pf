<div class="container">
  <h2 class="head-line text-center title_h2 subtitle row"><i class="fas fa-user-friends"></i>会員情報</h2>
	  <div class="row subtitle">

   <div class ="col-md-7">
     <h4 class="head-line text-center title_h4 subtitle row">登録情報</h4>
			<table class="table table-bordered table-condensed" >
					<tbody>

						<tr>
							<td bgcolor="#EEEEEE",class="info"><strong>氏名</strong></td>
							<td class="text-left"><%= @customer.name %></td>
						</tr>

						<tr>
							<td bgcolor="#EEEEEE",class="info"><strong>ニックネーム</strong></td>
							<td class="text-left"><%= @customer.nickname %></td>
						</tr>

						<tr>
							<td bgcolor="#EEEEEE",class="info"><strong>性別</strong></td>
							<td class="text-left"><%= @customer.gender %></td>
						</tr>

						<tr>
							<td bgcolor="#EEEEEE",class="info"><strong>Eメール</strong></td>
							<td class="text-left"><%= @customer.email %></td>
						</tr>

						<tr>
							<td bgcolor="#EEEEEE",class="info"><strong>退会フラグ</strong></td>
							<td class="text-left">
								<% if @customer.is_deleted == true %>
                  <strong class="text-info">退会</strong>
	              <% else %>
	                <strong class="text-info">有効</strong>
	              <% end %>
							</td>
						</tr>

						<tr>
							<td bgcolor="#EEEEEE",class="info"><strong>お気に入り数</strong></td>
							<td class="text-left"><%= @customer.favorites.count %></td>
						</tr>

						<tr>
							<td bgcolor="#EEEEEE",class="info"><strong>フォロー数</strong></td>
							<td class="text-left"><%= @customer.followings.count %></td>
						</tr>

						<tr>
							<td bgcolor="#EEEEEE",class="info"><strong>フォロワー数</strong></td>
							<td class="text-left"><%= @customer.followers.count %></td>
						</tr>

					</tbody>
			</table><br/>
				<%=link_to '編集', edit_admins_user_path, class: "btn btn-outline-info" %>
				<%=link_to "ユーザー一覧", admins_top_path, class: "btn btn-outline-secondary" %>

        <p></p>

			</div><br/>

      <div class="col-md-5">
    	<h4 class="head-line text-center title_h4 subtitle row">投稿一覧</h4>
		<table class="table striped">
      <thead>
        <tr>
          <th bgcolor="#EEEEEE">番号</th>
          <th bgcolor="#EEEEEE">観光地名</th>
          <!--<th bgcolor="#EEEEEE">ジャンル</th>-->
          <th bgcolor="#EEEEEE">更新日</th>
        </tr>
      </thead>
      <tbody>
        <% @posts.each do |post|%>
          <tr>
            <td class="text-left"><%= post.id %></td>
            <td class="text-left" ><%= post.name %></td>
            <!--<td class = "text-left">--><%#= posts.genre.name %>
            <td class = "text-left"><%= post.updated_at.strftime('%Y/%m/%d')%></td>
          </tr>
         <% end %>
      </tbody>
		</table>
    </div>
  </div>
</div>