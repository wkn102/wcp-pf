<% provide(:title, "マイページ") %>
<div class="container">

	  <div class="row subtitle">
			<h2 class="head-line text-center title_h2 subtitle row">マイページ編集</h2>
			<h4><strong class="information-link fas fa-book">登録情報編集</strong></h4>

			 <%= form_with model: @customer, url:user_path(@customer), local:true do |f| %>



  <div class="row form-for-resistration">
   <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :nickname %><br />
    <%= f.text_field :nickname, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
   <%= f.label :gender, :man %>
  <%= f.radio_button :gender, 1 %>
  <%= f.label :gender, :woman %>
  <%= f.radio_button :gender, 2 %>
  <%= f.label :gender, :other %>
  <%= f.radio_button :gender, 3 %>
　</div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "編集保存" %>
  </div>
  <% end %>

  </div>
  </div>
</div>
