<div class='container'>

  <p></p>

  <% if @datas.empty? %>
  <div class="comment">
    <h2>該当する投稿はありません<i class="far fa-sad-tear"></i></h2>
  </div>
  <% else %>
  <div class="row">
    <h3 style="display: inline;"><i class="fas fa-search-plus"></i>検索結果</h3>
      <div class="right">
        <%=link_to new_post_path, class: "btn btn-outline-secondary new_product" do %>
        <i class="fas fa-plus"></i>
        <% end %>
      </div>
  </div>

  <p></p>

  <div class="row">
    <table class="table striped">
      <thead>
        <tr>
          <th bgcolor="#EEEEEE">観光地名</th>
          <th bgcolor="#EEEEEE">ジャンル</th>
          <th bgcolor="#EEEEEE">ニックネーム</th>
          <th bgcolor="#EEEEEE">更新日</th>
          <th bgcolor="#EEEEEE"></th>
        </tr>
      </thead>
      <tbody>
        <% @datas.each do |data| %>
          <tr>
            <td class="text-left" ><%=link_to data.name, post_path(data) %></td>
            <td class = "text-left"><%= data.genre.name %></td>
            <td class = "text-left"><%= data.customer.nickname %></td>
            <td class = "text-left"><%= data.updated_at.strftime('%Y/%m/%d')%></td>
            <td class = "text-left">
            <% if data.liked_by?(current_customer) %>
            <p>
              <%= link_to post_likes_path(data), method: :delete do %>
               役に立った ♥<%= data.likes.count %>
              <% end %>
            </p>
            <% else %>
            <p>
              <%= link_to post_likes_path(data), method: :post do %>
                役に立った♡<%= data.likes.count %>
              <% end %>
            </p>
            <% end %>
            </td>
          </tr>
          <% end %>
      </tbody>
    </table>
  </div>
  <% end %>

</div>












