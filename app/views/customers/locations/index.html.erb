<div class="container">
　　<h2><i class="fas fa-map-marker-alt"></i>Googleマップ</h2>

      <!-- 地名入力用のinputを追加 -->
      <input id="address" type="textbox" value="Tokyo">

      <!-- buttonをクリックしたらcodeAddressを実行　-->
      <input type="button" value="検索" onclick="codeAddress()">
      <div id='map'>
      </div>



      <style>
      #map{
        height: 400px;
      }
      </style>

      <script>
      /*
      mapを関数の外で定義(codeAddressでも使うため)
      geocoderを用意
      */

      let map
      let geocoder

      function initMap(){
        // geocoderを初期化
        geocoder = new google.maps.Geocoder()

        map = new google.maps.Map(document.getElementById('map'), {
        center: {lat: -34.397, lng: 150.644},
        zoom: 8
        });
      }

      function codeAddress(){
        // 入力を取得
        let inputAddress = document.getElementById('address').value;

        // geocodingしたあとmapを移動
        geocoder.geocode( { 'address': inputAddress}, function(results, status) {
          if (status == 'OK') {
      　　　　　　　　　　　　// map.setCenterで地図が移動
            map.setCenter(results[0].geometry.location);

      　　　　　　　　　　　　// google.maps.MarkerでGoogleMap上の指定位置にマーカが立つ
            var marker = new google.maps.Marker({
                map: map,
                position: results[0].geometry.location
            });
          } else {
            alert('Geocode was not successful for the following reason: ' + status);
          }
        });
      }
      </script>
      <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAWJhmmLhJtk5JOZNj920vLeT-X3H_Ewos&callback=initMap" async defer></script>

</div>