 <div class='container'>
 <div class="row subtitle">
    <h2 style="display: inline;"><strong>お気に入り一覧</strong></h2>
  </div>

  <p></p>

  <div class="row">
    <table class="table striped">
      <thead>
        <tr>
          <th bgcolor="#EEEEEE">観光地名</th>
          <th bgcolor="#EEEEEE">ジャンル</th>
          <th bgcolor="#EEEEEE">エリア</th>
          <th bgcolor="#EEEEEE">ニックネーム</th>
          <th bgcolor="#EEEEEE">性別</th>
        </tr>
      </thead>
      <tbody>
        <% @posts.each do |post|%>
          <tr>
            <td class="text-left"><%=link_to post.name, post_path(post) %></td>
            <td class="text-left" ><%= post.genre %></td>
            <td class = "text-left"><%= post.location %></td>
            <td class = "text-left"><%= post.customer.nickname %></td>
            <td class = "text-left"><%= post.customer.gender %></td>
          </tr>
          <% end %>
      </tbody>
    </table>
  </div>
  <%= paginate @posts %>
</div>
</div>