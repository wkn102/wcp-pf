  <div class="row">
    <% @posts.each do |post|%>
    <div class="blog-item">
          <div class="blog-image"><%= attachment_image_tag post, :image ,size: "300x150", fallback: "no_image.jpg", class: "rounded" %></div>
          <section class="blog-text">
            <h3 class="blog-text-heading"><%=  link_to post.name, post_path(post)  %></h3>
            <p class="blog-date"><%= link_to post.customer.nickname, user_path(post.customer) %></p>
            <span class="category"><%= post.genre.name %></span>
            <% if post.favorited_by?(current_customer) %>
            <p>
              <%= link_to post_favorites_path(post), class: "btn btn-outline-info", method: :delete do %>
               お気に入り ♥<%= post.favorites.count %>
              <% end %>
            </p>
            <% else %>
            <p>
              <%= link_to post_favorites_path(post), class: "btn btn-outline-info", method: :post do %>
                お気に入り♡<%= post.favorites.count %>
              <% end %>
            </p>
            <% end %>
          </section>
        </div>
    <% end %>


